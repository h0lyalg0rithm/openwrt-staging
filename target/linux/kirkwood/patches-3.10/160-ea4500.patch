+
+/dts-v1/;
+
+/include/ "kirkwood.dtsi"
+/include/ "kirkwood-6282.dtsi"
+
+/ {
+	model = "Linksys EA4500";
+	compatible = "linksys,ea4500", "marvell,kirkwood-88f6282", "marvell,kirkwood";
+
+	memory {
+		device_type = "memory";
+		reg = <0x00000000 0x8000000>;
+	};
+
+	chosen {
+		bootargs = "console=ttyS0,115200n8 earlyprintk";
+	};
+
+	ocp@f1000000 {
+		pinctrl: pinctrl@10000 {
+			pinctrl-0 = <	&pmx_led_white_health
+					&pmx_led_white_pulse
+					&pmx_btn_wps
+					&pmx_btn_reset >;
+
+			pinctrl-names = "default";
+
+			pmx_led_white_health: pmx-led-white-health {
+				marvell,pins = "mpp7";
+				marvell,function = "gpo";
+			};
+			pmx_led_white_pulse: pmx-led-white-pulse {
+				marvell,pins = "mpp14";
+				marvell,function = "gpio";
+			};
+			pmx_btn_wps: pmx-btn-wps {
+				marvell,pins = "mpp47";
+				marvell,function = "gpio";
+			};
+			pmx_btn_reset: pmx-btn-reset {
+				marvell,pins = "mpp48";
+				marvell,function = "gpio";
+			};
+		};
+
+		rtc@10300 {
+			status = "disabled";
+		};
+
+		serial@12000 {
+			status = "okay";
+		};
+
+		ehci@50000 {
+			status = "okay";
+		};
+
+		nand@3000000 {
+			status = "okay";
+			pinctrl-0 = <&pmx_nand>;
+			pinctrl-names = "default";
+
+			partition@0 {
+				label = "u-boot";
+				reg = <0x0000000 0x80000>;
+			};
+
+			partition@80000 {
+				label = "u-boot environment";
+				reg = <0x80000 0x20000>;
+			};
+
+			partition@200000 {
+				label = "kernel";
+				reg = <0x200000 0x200000>;
+			};
+
+			partition@400000 {
+				label = "root";
+				reg = <0x400000 0x1c00000>;
+			};
+		};
+
+		pcie-controller {
+			status = "okay";
+
+			pcie@1,0 {
+				status = "okay";
+			};
+
+			pcie@2,0 {
+				status = "okay";
+			};
+		};
+	};
+
+	gpio_keys {
+		compatible = "gpio-keys";
+		#address-cells = <1>;
+		#size-cells = <0>;
+
+		button@15 {
+			label = "WPS Button";
+			linux,code = <0x211>;
+			gpios = <&gpio1 15 1>;
+		};
+
+		button@16 {
+			label = "Reset Button";
+			linux,code = <0x198>;
+			gpios = <&gpio1 16 0>;
+		};
+	};
+
+	gpio-leds {
+		compatible = "gpio-leds";
+
+		white-health {
+			label = "ea4500:white:health";
+			gpios = <&gpio0 7 0>;
+		};
+
+		white-pulse {
+			label = "ea4500:white:pulse";
+			gpios = <&gpio0 14 1>;
+		};
+	};
+};
+
+&mdio {
+	status = "okay";
+
+	ethphy0: ethernet-phy@10 {
+		device_type = "ethernet-phy";
+		reg = <0x10>;
+	};
+};
+
+&eth0 {
+	status = "okay";
+	ethernet0-port@0 {
+		phy-handle = <&ethphy0>;
+	};
+};
+
+&eth1 {
+	status = "okay";
+	ethernet1-port@0 {
+		speed = <1000>;
+		duplex = <1>;
+	};
+};
